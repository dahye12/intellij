package j09_클래스;

import java.util.Scanner;

public class ClassAMain {
    public static void main(String[] args) {   //main 있는 곳에 main 입력

        ClassA a1 = new ClassA();
//        Scanner scanner = new Scanner(System.in);

        System.out.println("이름입력");
        a1.name = "닿" ;               //a1= 객체 , 공통된 거를 최소한으로 모아둔 것 클래스,

        System.out.println(a1.name);

        ClassA a2 = new ClassA();
        System.out.println("나이를 입력하세요");
//        a2.num = scanner.nextInt();

        System.out.println(a1.name);//0이 나옴. 서로 다른 객체이기때문 동일한 클래스여도 다름
//        System.out.println(a2.num);

        System.out.println("너도 이름 입력해");

        a2.name ="근수";

        a1.callName();  // 불러올수이씀



    }
}
